[report]
show_missing = true
skip_covered = true
skip_empty = true

[run]
# Ensure all python modules in casement have their coverage reported,
# not just files that pytest touches.
source = src/casement/
omit =
    */site-packages/*
    */.tox/*
    */tests/*
    # This file is automatically generated by setuptools_scm
    src/casement/version.py
parallel=True
relative_files=True
data_file=.coverage/.coverage
